[Unit]
Description = User Service
[Service]
User=roboshop
Environment=MONGO=true
Environment=REDIS_HOST=redis-{{ENV}}.internal.roboshop
Environment=MONGO_URL="mongodb://{{SECRETS.DOCDB_USR}}:{{SECRETS.DOCDB_PASS}}@{{DOCDB_ENDPOINT}}:27017/users?tls=true&tlsCAFile=global-bundle.pem&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false"
ExecStart=/bin/node /home/roboshop/user/server.js
SyslogIdentifier=user

[Install]
WantedBy=multi-user.target




